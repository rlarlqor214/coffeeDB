<!-- order.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title><%= title %></title>
</head>
<body>
    <a class="back" href="/"> 메인페이지로 </a>
    <div class="menu">
        <div>
            <h1>사용자 주문 목록</h1>
            <% for (const orderDetail of orderDetails) { %>
                <h2>주문번호: <%= orderDetail.order.order_number %></h2>
                <table border="1">
                    <tr>
                        <td>메뉴번호</td>
                        <td>주문 날짜</td>
                        <td>주문 수량</td>
                        <td>가격</td>
                    </tr>
                    <% for (const menuOrder of orderDetail.menuOrders) { %>
                        <tr>
                            <td><%= menuOrder.menu_menu_number %></td>
                            <td><%= orderDetail.order.orderDate %></td>
                            <td><%= menuOrder.order_quantity %></td>
                            <td><%= menuOrder.order_price %></td>
                        </tr>
                    <% } %>
                    <tr>
                        <td colspan="2">총 금액</td>
                        <td colspan="2"><%= orderDetail.menuOrders.reduce((acc, curr) => acc + curr.order_price, 0) %></td>
                    </tr>
                </table>
            <% } %>
        </div>
    </div>
</body>
</html>
